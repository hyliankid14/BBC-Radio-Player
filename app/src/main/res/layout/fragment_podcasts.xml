<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Search App Bar (Material 3 style) - pinned at the top of the fragment -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/podcasts_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurfaceContainer"
        android:fitsSystemWindows="true"
        app:contentInsetStartWithNavigation="0dp"
        android:elevation="2dp">

        <!-- Use a custom end-icon so visibility can be controlled independently of focus/IME -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/search_podcast_text_input"
            style="@style/Widget.Material3.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="?attr/colorSurface"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:hintEnabled="false"
            app:startIconDrawable="@drawable/ic_search"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_clear"
            app:endIconContentDescription="@string/clear_search">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/search_podcast_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/colorOnSurfaceVariant"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingStart="64dp"
                android:background="@null"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Search podcasts..." />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/podcasts_filter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_filter_list"
            android:contentDescription="Filter podcasts"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="?attr/colorOnSurface" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Active search hint (visible when a persisted search is active) -->
    <TextView
        android:id="@+id/active_search_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:visibility="gone"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="" />



    <androidx.core.widget.NestedScrollView
        android:id="@+id/podcasts_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:fillViewport="true"
        android:background="?attr/colorSurfaceContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <!-- Filters container (hidden by default; toggled by the filter button) -->
            <LinearLayout
                android:id="@+id/filters_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:background="?attr/colorSurfaceContainer"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="2dp">

                <!-- Genre Filter (Exposed dropdown - Material 3) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/genre_filter_layout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="6dp"
                    app:boxStrokeColor="?attr/colorOutline"
                    app:endIconMode="dropdown_menu"
                    app:hintEnabled="true"
                    android:hint="Genre"
                    app:boxBackgroundColor="?attr/colorSurface">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/genre_filter_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textColor="?attr/colorOnSurface"
                        android:padding="8dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Sort Filter (Exposed dropdown - Material 3) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/sort_filter_layout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="6dp"
                    app:boxStrokeColor="?attr/colorOutline"
                    app:endIconMode="dropdown_menu"
                    app:hintEnabled="true"
                    android:hint="Sort"
                    app:boxBackgroundColor="?attr/colorSurface">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/sort_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textColor="?attr/colorOnSurface"
                        android:padding="8dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Reset Button -->
                <Button
                    android:id="@+id/reset_filters_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reset Filters"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="6dp" />
            </LinearLayout>

            <!-- Search Status Indicator (shows search progress) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/search_status_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search Status"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="8dp" />

                    <!-- Podcast name status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <ImageView
                            android:id="@+id/search_status_name_icon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_check"
                            android:tint="?attr/colorPrimary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Podcast name"
                            android:textSize="13sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <!-- Podcast description status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <ImageView
                            android:id="@+id/search_status_description_icon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_check"
                            android:tint="?attr/colorPrimary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Podcast description"
                            android:textSize="13sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <!-- Episodes status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ProgressBar
                            android:id="@+id/search_status_episodes_progress"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginEnd="8dp"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/search_status_episodes_icon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_check"
                            android:tint="?attr/colorPrimary"
                            android:layout_marginEnd="8dp"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Podcast episodes"
                            android:textSize="13sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Podcasts RecyclerView (participates in the NestedScrollView) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/podcasts_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:scrollbars="vertical"
                android:background="?attr/colorSurface" />
            </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Loading Indicator (overlays center) -->
    <ProgressBar
        android:id="@+id/loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Empty State (overlays center) -->
    <TextView
        android:id="@+id/empty_state_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No podcasts found"
        android:gravity="center"
        android:visibility="gone" />

    <!-- Floating action button to return to top and appear while scrolling -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:id="@+id/scroll_to_top_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Scroll to top"
        app:srcCompat="@drawable/ic_arrow_up"
        android:visibility="gone"
        app:fabSize="normal"
        app:useCompatPadding="false"
        app:backgroundTint="?attr/colorPrimary"
        app:rippleColor="?attr/colorOnPrimary"
        android:tint="?attr/colorOnPrimary"
        android:layout_gravity="bottom|end"
        android:elevation="8dp" />

</FrameLayout>

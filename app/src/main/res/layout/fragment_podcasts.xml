<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Search App Bar (Material 3 style) - pinned at the top of the fragment -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/podcasts_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:contentInsetStartWithNavigation="0dp"
        android:elevation="2dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/search_podcast_text_input"
            style="@style/Widget.Material3.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="?attr/colorSurfaceVariant"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:hintEnabled="true"
            android:hint="Search podcasts..."
            app:startIconDrawable="@drawable/ic_search"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/search_podcast_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/colorOnSurfaceVariant"
                android:padding="12dp"
                android:background="@null"
                android:maxLines="1"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/podcasts_filter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_filter_list"
            android:contentDescription="Filter podcasts"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="?attr/colorOnSurface" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Filters container (hidden by default; toggled by the filter button) -->
    <LinearLayout
        android:id="@+id/filters_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Genre Filter (Exposed dropdown - Material 3) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/genre_filter_layout"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="8dp"
            app:boxStrokeColor="?attr/colorOutline"
            app:endIconMode="dropdown_menu"
            app:hintEnabled="true"
            android:hint="Genre">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/genre_filter_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textColor="?attr/colorOnSurface"
                android:padding="8dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Sort Filter (Exposed dropdown - Material 3) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sort_filter_layout"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="8dp"
            app:boxStrokeColor="?attr/colorOutline"
            app:endIconMode="dropdown_menu"
            app:hintEnabled="true"
            android:hint="Sort">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/sort_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textColor="?attr/colorOnSurface"
                android:padding="8dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Reset Button -->
        <Button
            android:id="@+id/reset_filters_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Filters"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <!-- Podcasts RecyclerView (participates in the NestedScrollView) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/podcasts_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:scrollbars="vertical" />
            </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Loading Indicator (overlays center) -->
    <ProgressBar
        android:id="@+id/loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Empty State (overlays center) -->
    <TextView
        android:id="@+id/empty_state_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No podcasts found"
        android:gravity="center"
        android:visibility="gone" />

    <!-- Floating action button to return to top and appear while scrolling -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:id="@+id/scroll_to_top_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Scroll to top"
        app:srcCompat="@drawable/ic_arrow_up"
        android:visibility="gone"
        app:fabSize="normal"
        app:useCompatPadding="false"
        app:backgroundTint="?attr/colorPrimary"
        app:rippleColor="?attr/colorOnPrimary"
        android:tint="?attr/colorOnPrimary"
        android:layout_gravity="bottom|end"
        android:elevation="8dp" />

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/colorSurface"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/podcast_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:contentDescription="Podcast artwork" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/podcast_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <TextView
            android:id="@+id/podcast_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/podcast_genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/podcast_new_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:text="â€¢"
            android:textSize="18sp"
            android:visibility="gone"
            android:textColor="@color/episode_tilde_amber"
            android:contentDescription="New episodes" />

        <ImageView
            android:id="@+id/podcast_notification_bell"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom|center_horizontal"
            android:contentDescription="Toggle notifications"
            android:visibility="gone"
            android:tint="?attr/colorOnSurface"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </FrameLayout>

    <ImageView
        android:id="@+id/podcast_subscribed_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="Subscribed"
        android:visibility="gone"
        android:tint="?attr/colorOnSurface" />
</LinearLayout>

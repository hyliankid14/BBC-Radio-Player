<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp">

    <ImageView
        android:id="@+id/podcast_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:contentDescription="Podcast artwork" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/podcast_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Small dot indicator for new episodes (hidden by default) -->
            <TextView
                android:id="@+id/podcast_new_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="6dp"
                android:visibility="gone"
                android:textColor="@color/episode_tilde_amber"
                android:contentDescription="New episodes" />
        </LinearLayout>

        <TextView
            android:id="@+id/podcast_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/podcast_genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/podcast_subscribed_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="Subscribed"
        android:visibility="gone"
        android:tint="?attr/colorOnSurface" />
</LinearLayout>

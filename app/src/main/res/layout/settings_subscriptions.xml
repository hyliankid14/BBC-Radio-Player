<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurfaceContainer"
        app:titleTextColor="?attr/colorOnSurface"
        app:navigationIconTint="?attr/colorOnSurface" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscriptions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Subscription Notifications -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscription Notifications"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/subscription_refresh_layout"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="?attr/colorOutline"
            app:endIconMode="dropdown_menu"
            app:boxBackgroundColor="?attr/colorSurface"
            android:hint="Check for new episodes every">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/subscription_refresh_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textColor="?attr/colorOnSurface"
                android:padding="8dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Podcast Downloads -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Podcast Downloads"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Auto-download subscribed podcasts"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/auto_download_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/auto_download_limit_layout"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:boxStrokeColor="?attr/colorOutline"
            app:endIconMode="dropdown_menu"
            app:boxBackgroundColor="?attr/colorSurface"
            android:hint="Limit auto-download to">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/auto_download_limit_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textColor="?attr/colorOnSurface"
                android:padding="8dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Download on WiFi only"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/wifi_only_download_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete episode when played to completion"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/delete_on_played_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp" />
        </LinearLayout>

        <Button
            android:id="@+id/delete_all_downloads_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete All Downloads"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>

</LinearLayout>

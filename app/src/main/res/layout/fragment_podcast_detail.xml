<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Use a NestedScrollView so the header scrolls with the content instead of being hidden programmatically -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/podcast_detail_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Podcast Header -->
            <LinearLayout
                android:id="@+id/podcast_detail_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/podcast_detail_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:contentDescription="Podcast artwork" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/podcast_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/podcast_detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:drawableEnd="@drawable/ic_expand_more"
                    android:drawablePadding="4dp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/podcast_detail_show_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show more"
            android:textSize="12sp"
            android:textColor="?attr/colorPrimary"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/subscribe_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscribe"
            android:layout_marginTop="12dp" />
    </LinearLayout>

            <!-- Episodes RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/episodes_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:scrollbars="vertical" />

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/loading_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <!-- Empty State -->
            <TextView
                android:id="@+id/empty_state_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No episodes found"
                android:gravity="center"
                android:visibility="gone" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating action button to return to top when the user starts scrolling -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:id="@+id/scroll_to_top_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Scroll to top"
        app:srcCompat="@drawable/ic_arrow_up"
        android:visibility="gone"
        app:fabSize="normal"
        app:useCompatPadding="true"
        app:backgroundTint="?attr/colorPrimary"
        app:rippleColor="?attr/colorOnPrimary"
        android:tint="?attr/colorOnPrimary"
        android:layout_gravity="bottom|end"
        android:elevation="8dp" />

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurfaceContainer">

    <!-- Top App Bar (Material 3) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/top_app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurfaceContainer"
        app:titleTextColor="?attr/colorOnSurface"
        app:navigationIconTint="?attr/colorOnSurface"
        app:menu="@menu/top_app_bar_menu" />

    <!-- Fill the small gap under the app bar with the same surface container colour -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorSurfaceContainer" />

    <!-- Favorites toggle group shown under the app bar for quick access -->
    <LinearLayout
        android:id="@+id/favorites_toggle_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fav_tab_stations"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="2dp"
            android:text="Stations"
            app:icon="@drawable/ic_star"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:cornerRadius="100dp"
            android:importantForAccessibility="yes"
            android:focusable="true" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fav_tab_subscribed"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="Subscribed"
            app:icon="@drawable/ic_podcast"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:cornerRadius="100dp"
            android:importantForAccessibility="yes"
            android:focusable="true" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fav_tab_saved"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="Saved"
            app:icon="@drawable/ic_bookmark"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:cornerRadius="100dp"
            android:importantForAccessibility="yes"
            android:focusable="true" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fav_tab_history"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="0dp"
            android:text="History"
            app:icon="@drawable/ic_history"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:cornerRadius="100dp"
            android:importantForAccessibility="yes"
            android:focusable="true" />

    </LinearLayout>

    <!-- Dynamic Fragment Container (Podcasts) -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <!-- Static Content Container (Stations &amp; Settings) -->
    <FrameLayout
        android:id="@+id/static_content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/stations_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="?attr/colorSurfaceContainer">

            <!-- Filter Buttons (static; won't move during swipes) -->
            <include
                layout="@layout/filter_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/filter_buttons_include" />

            <!-- Stations content (this is translated during swipes; tabs above remain static) -->
            <LinearLayout
                android:id="@+id/stations_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/stations_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:clipToPadding="false"
                    android:scrollbars="vertical"
                    android:background="?attr/colorSurface" />

            </LinearLayout>

            <!-- Favorites toggle group moved to top under the app bar -->

            <!-- Stations (favourited radio stations) - reuse existing stations list -->
            <!-- (stations_list already exists above and is used as the Stations view) -->

            <!-- Subscribed podcasts: keep the card look but remove the old collapsible header -->
            <FrameLayout
                android:id="@+id/favorites_podcasts_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="0dp"
                android:visibility="gone"
                android:background="?attr/colorSurface"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/favorites_podcasts_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:paddingTop="0dp"
                    android:clipToPadding="true"
                    android:scrollbars="vertical"
                    android:background="?attr/colorSurface" />
            </FrameLayout>

            <!-- Saved Episodes: remove collapsible header and show as its own card when selected -->
            <FrameLayout
                android:id="@+id/saved_episodes_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:background="?attr/colorSurface"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/saved_episodes_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:paddingTop="0dp"
                    android:clipToPadding="true"
                    android:scrollbars="vertical"
                    android:background="?attr/colorSurface" />

            </FrameLayout>

            <!-- History: full-width list (no background card) -->
            <FrameLayout
                android:id="@+id/favorites_history_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:background="?attr/colorSurface"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/favorites_history_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:paddingTop="0dp"
                    android:clipToPadding="true"
                    android:scrollbars="vertical"
                    android:background="?attr/colorSurface" />

            </FrameLayout>


        </LinearLayout>

        <!-- Settings View -->
        <include
            android:id="@+id/settings_container"
            layout="@layout/settings_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

    <include
        layout="@layout/mini_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        style="@style/Widget.Material3.BottomNavigationView" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BBC Radio Player"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_radio2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play BBC Radio 2" />

    <Button
        android:id="@+id/btn_radio4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play BBC Radio 4"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btn_radio6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play BBC Radio 6 Music"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Playback"
        android:layout_marginTop="24dp"
        android:backgroundTint="#D32F2F" />

</LinearLayout>

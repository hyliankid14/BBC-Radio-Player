<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:gravity="center_horizontal">

    <!-- Header with Back Button and Station Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#6200EE"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/player_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:tint="#FFFFFF"
            android:contentDescription="Back" />
            
        <TextView
            android:id="@+id/player_station_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Station Name"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="#FFFFFF"
            android:layout_marginStart="16dp"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Large Artwork (Square) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <com.example.androidautoradioplayer.SquareImageView
            android:id="@+id/player_artwork"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Station Artwork"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            android:elevation="8dp" />
            
    </LinearLayout>

    <!-- Metadata Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="0dp"
        android:paddingBottom="24dp"
        android:gravity="center">

        <TextView
            android:id="@+id/player_show_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Name"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            android:textColor="?attr/colorOnSurface"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <com.example.androidautoradioplayer.ScrollingTextView
            android:id="@+id/player_now_playing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Now Playing Info"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center" />

    </LinearLayout>

    <!-- Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="48dp">

        <ImageButton
            android:id="@+id/player_previous"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_skip_previous"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:tint="?attr/colorOnSurface"
            android:contentDescription="Previous" />

        <ImageButton
            android:id="@+id/player_play_pause"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_play_arrow"
            android:background="@drawable/button_background"
            android:scaleType="centerInside"
            android:tint="?attr/colorOnPrimary"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:contentDescription="Play/Pause" />

        <ImageButton
            android:id="@+id/player_next"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_skip_next"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:tint="?attr/colorOnSurface"
            android:contentDescription="Next" />

    </LinearLayout>
    
    <!-- Bottom Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="32dp">
        
        <ImageButton
            android:id="@+id/player_favorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:tint="?attr/colorOnSurfaceVariant"
            android:contentDescription="Favorite"
            android:layout_marginEnd="32dp"/>

        <ImageButton
            android:id="@+id/player_stop"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_stop"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:tint="?attr/colorOnSurfaceVariant"
            android:contentDescription="Stop" />
            
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Station Artwork (Square) -->
    <com.example.androidautoradioplayer.SquareImageView
        android:id="@+id/now_playing_artwork"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:contentDescription="Station artwork"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/now_playing_show_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.5" />

    <!-- Show Name -->
    <TextView
        android:id="@+id/now_playing_show_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BBC Radio"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        android:textColor="?attr/colorOnSurface"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="40dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/now_playing_artwork"
        app:layout_constraintBottom_toTopOf="@id/now_playing_artist_track"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Artist/Track Info -->
    <TextView
        android:id="@+id/now_playing_artist_track"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="12dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/now_playing_show_name"
        app:layout_constraintBottom_toTopOf="@id/playback_controls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Playback Controls -->
    <LinearLayout
        android:id="@+id/playback_controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

            <!-- Previous Button -->
            <ImageButton
                android:id="@+id/now_playing_previous"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:src="@drawable/ic_skip_previous"
                android:scaleType="centerInside"
                android:padding="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Previous"
                android:tint="?attr/colorOnSurface" />

            <!-- Play/Pause Button -->
            <ImageButton
                android:id="@+id/now_playing_play_pause"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:src="@drawable/ic_play_arrow"
                android:scaleType="centerInside"
                android:padding="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Play/Pause"
                android:tint="@color/now_playing_play_pause_tint" />

            <!-- Next Button -->
            <ImageButton
                android:id="@+id/now_playing_next"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:src="@drawable/ic_skip_next"
                android:scaleType="centerInside"
                android:padding="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Next"
                android:tint="?attr/colorOnSurface" />

            <!-- Stop Button -->
            <ImageButton
                android:id="@+id/now_playing_stop"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:src="@drawable/ic_stop"
                android:scaleType="centerInside"
                android:padding="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Stop"
                android:tint="?attr/colorOnSurface" />

            <!-- Star/Favorite Button -->
            <ImageButton
                android:id="@+id/now_playing_favorite"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:padding="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Add to Favorites" />

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Station Artwork (Square) -->
    <com.example.androidautoradioplayer.SquareImageView
        android:id="@+id/now_playing_artwork"
        android:layout_width="@dimen/now_playing_artwork_width"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:contentDescription="Station artwork"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/now_playing_show_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.5" />

    <!-- Show Name -->
    <TextView
        android:id="@+id/now_playing_show_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BBC Radio"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        android:textColor="?attr/colorOnSurface"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="40dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/now_playing_artwork"
        app:layout_constraintBottom_toTopOf="@id/now_playing_artist_track"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Artist/Track Info -->
    <TextView
        android:id="@+id/now_playing_artist_track"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="12dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/now_playing_show_name"
        app:layout_constraintBottom_toTopOf="@id/playback_controls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Playback Controls -->
    <LinearLayout
        android:id="@+id/playback_controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

            <!-- Stop Icon Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/now_playing_stop"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                style="@style/Widget.Material3.Button.IconButton"
                app:icon="@drawable/ic_stop"
                app:iconSize="24dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:padding="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:contentDescription="Stop" />

            <!-- Previous Icon Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/now_playing_previous"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                style="@style/Widget.Material3.Button.IconButton"
                app:icon="@drawable/ic_skip_previous"
                app:iconSize="24dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:padding="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:contentDescription="Previous" />

            <!-- Play/Pause Filled Button (High Emphasis) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/now_playing_play_pause"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="4dp"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                app:icon="@drawable/ic_play_arrow"
                app:iconSize="32dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:padding="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:contentDescription="Play/Pause" />

            <!-- Next Icon Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/now_playing_next"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                style="@style/Widget.Material3.Button.IconButton"
                app:icon="@drawable/ic_skip_next"
                app:iconSize="24dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:padding="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:contentDescription="Next" />

            <!-- Favorite Icon Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/now_playing_favorite"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                style="@style/Widget.Material3.Button.IconButton"
                app:icon="@drawable/ic_star_outline"
                app:iconSize="24dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:padding="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:contentDescription="Add to Favorites" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

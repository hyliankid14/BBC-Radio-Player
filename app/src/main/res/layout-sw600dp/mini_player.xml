<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mini_player"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal"
    android:background="@color/md_theme_surfaceContainer"
    android:gravity="center_vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:visibility="gone"
    android:elevation="2dp">

    <!-- Station Artwork -->
    <ImageView
        android:id="@+id/mini_player_artwork"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:contentDescription="Station artwork"
        android:layout_marginEnd="20dp" />

    <!-- Station Info and Controls Container (Horizontal) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Text Info (Vertical Stack) -->
        <LinearLayout
            android:id="@+id/mini_player_text_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackground">

            <!-- Station Title -->
            <TextView
                android:id="@+id/mini_player_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Station Name"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Station Subtitle (Current Show) -->
            <com.example.androidautoradioplayer.ScrollingTextView
                android:id="@+id/mini_player_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BBC Radio"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>

        <!-- Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Stop Button -->
            <ImageButton
                android:id="@+id/mini_player_stop"
                android:layout_width="@dimen/mini_player_button_size"
                android:layout_height="@dimen/mini_player_button_size"
                android:src="@drawable/ic_stop"
                android:scaleType="centerInside"
                android:padding="@dimen/mini_player_button_padding"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Stop"
                android:tint="@color/mini_player_icon_tint" />

            <!-- Previous Button -->
            <ImageButton
                android:id="@+id/mini_player_previous"
                android:layout_width="@dimen/mini_player_button_size"
                android:layout_height="@dimen/mini_player_button_size"
                android:src="@drawable/ic_skip_previous"
                android:scaleType="centerInside"
                android:padding="@dimen/mini_player_button_padding"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Previous"
                android:tint="@color/mini_player_icon_tint" />

            <!-- Play/Pause Button -->
            <ImageButton
                android:id="@+id/mini_player_play_pause"
                android:layout_width="@dimen/mini_player_button_size"
                android:layout_height="@dimen/mini_player_button_size"
                android:src="@drawable/ic_play_arrow"
                android:scaleType="centerInside"
                android:padding="@dimen/mini_player_button_padding"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Play/Pause"
                android:tint="@color/mini_player_icon_tint" />

            <!-- Next Button -->
            <ImageButton
                android:id="@+id/mini_player_next"
                android:layout_width="@dimen/mini_player_button_size"
                android:layout_height="@dimen/mini_player_button_size"
                android:src="@drawable/ic_skip_next"
                android:scaleType="centerInside"
                android:padding="@dimen/mini_player_button_padding"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Next"
                android:tint="@color/mini_player_icon_tint" />

            <!-- Favorites Button -->
            <ImageButton
                android:id="@+id/mini_player_favorite"
                android:layout_width="@dimen/mini_player_button_size"
                android:layout_height="@dimen/mini_player_button_size"
                android:src="@drawable/ic_star_border"
                android:scaleType="centerInside"
                android:padding="@dimen/mini_player_button_padding"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Add to Favorites" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>